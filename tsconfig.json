{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    // Aliases
    // "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@gameengine/*": [
        "./src/Application/GameEngine/*"
      ],
      "@ui/*": [
        "./src/Application/UI/*"
      ],
      "@commons/*": [
        "./src/Application/Commons/*"
      ],
      "@styles/*": [
        "./src/public/assets/styles/*"
      ],
    },
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/index.d.ts"
  ]
}